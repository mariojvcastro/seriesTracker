<h1>Listing users</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Nationality</th>
    <th>City</th>
    <th>Birthday</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.nationality %></td>
    <td><%= user.city %></td>
    <td><%= user.birthday %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

