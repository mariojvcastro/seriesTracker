<p id="notice"><%= notice %></p>
<div style = float: left; position=relative;>
<p>
  <h2><%= @series.name %> (<%= @series.country %>)<h2>
</p>

<p>
  <b>Started:</b>
  <%= @series.start_date %>
</p>
<p><b>Status:</b> <%= @series.status %></p>
<p><b>Runtime: </b> <%= @series.runtime %></p>
</div>
<div id="serieimage">
<%if @series.image_url %>
<img src="<%= @series.image_url %>" alt="<%= @series.name %>" />
<%end%>
</div>
<h3>Seasons</h3>

<%= render :file => "seasons/index", :collection => @series %>


<%= link_to 'New Season', new_series_season_path(@series) %>
<%= link_to 'Edit', edit_series_path(@series) %>
<%= link_to 'Back', series_index_path %>

