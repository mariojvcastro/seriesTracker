<h1>Listing sent messages</h1>
<%if not @messages.empty?   %>
<table>
  <tr>
    <th>To</th>
    <th>Date</th>
    <th>Subject</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @messages.each do |message| %>
  <tr>
  	<td><%= message.to.name %></td>
    <td><%= message.date %></td>
    <td><%= message.subject %></td>
    <td><%= link_to 'Show', {:action=>"show_sent", :controller=>"messages", :id => message.id} , :method => :get %></td>
    <td><%= link_to 'Destroy', {:action=>"delete_from", :controller=>"messages", :id => message.id} , :method => :post  %></td> 	
  </tr>
<% end %>
</table>

<%else%>
<p id="notice" >No messages</p>
<%end%>

<%= link_to 'New Message', new_message_path %>
