<% @episodes = episodes if defined?episodes %>
<% @series = series if defined?series %>
<% @season = season if defined?season %>

<h1>Listing episodes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Inair</th>
    <th>Season</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>
    <td><%= episode.title %></td>
    <td><%= episode.inair %></td>
    <td><%= episode.season.number %></td>
    <td><%= link_to 'Show', series_season_episode_path(episode.season.series.id, episode.season.id, episode) %></td>
    <td><%= link_to 'Edit', edit_series_season_episode_path(episode.season.series.id, episode.season.id, episode) %></td>
    <td><%= link_to 'Destroy', series_season_episode_path(episode.season.series.id, episode.season.id, episode), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Episode', new_series_season_episode_path(@series.id, @season.id) %>
